<resources>

    <style name="UsedStyle" parent="@style/Ojea">
    </style>

    <style name="Ojea" parent="AppTheme">
        <item name="android:textColor">@color/bookOrange</item>
        <item name="android:textColorHint">@color/colorOrangeTitle</item>
        <item name="android:titleTextColor">@color/colorOrangeTitle</item>
        <item name="android:colorButtonNormal">@color/colorDarkRunnerRed</item>
        <item name="colorPrimary">@color/colorDarkRunnerRed</item>
        <item name="colorPrimaryDark">@color/colorVeryDarkRunnerRed</item>
        <item name="android:popupBackground">@drawable/skyline_seattle_schwarz</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorRunnerRed</item>
        <item name="colorPrimaryDark">@color/colorDarkRunnerRed</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- <item name="colorAccent">@color/colorAccent</item> -->
    </style>

    <style name="AppBackgroudImage" parent="AppTheme">
        <item name="android:background">@drawable/skyline_seattle_schwarz</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppBackgroudImage2">
        <item name="android:background">@drawable/background</item>
    </style>
    <!-- Dark Theme -->


    <!-- Dark Theme -->
    <style name="RunnerDarkTheme" parent="AppTheme">
        <item name="android:textColor">@color/bookOrange</item>
        <item name="android:textColorHint">@color/colorOrangeTitle</item>
        <item name="android:titleTextColor">@color/colorOrangeTitle</item>
        <item name="android:colorButtonNormal">@color/colorRunnerRed</item>
    </style>


    <!-- Fullscreen Theme -->
    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>
    <!-- Fullscreen Theme -->



    <style name="ToolBarTheme" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.NoActionBar" parent="UsedStyle">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <style name="tracker" parent="AppTheme">
        <item name="android:textColor">@color/bookOrange</item>
        <item name="android:textColorHint">@color/colorOrangeTitle</item>
        <item name="android:titleTextColor">@color/colorOrangeTitle</item>
        <item name="android:colorButtonNormal">@color/damageTracker</item>
    </style>


</resources>
