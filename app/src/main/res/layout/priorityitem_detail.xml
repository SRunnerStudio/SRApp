<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/priority_detail_height"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:longClickable="true"
        android:onClick="setPriorityA"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="setPriorityA"
            android:text="A"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:id="@+id/priorityitem_detailA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="setPriorityA"
            android:text="test"
            android:textIsSelectable="true"
            tools:context="com.example.danielojea.srapp.PriorityDetailFragment" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/priority_detail_height"
        android:layout_weight="1"

        android:clickable="true"
        android:gravity="center"
        android:longClickable="true"
        android:onClick="setPriorityB"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="setPriorityB"
            android:text="B"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:id="@+id/priorityitem_detailB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="setPriorityB"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/priority_detail_height"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:longClickable="true"
        android:onClick="setPriorityC"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:text="C"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:id="@+id/priorityitem_detailC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="setPriorityC"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/priority_detail_height"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:longClickable="true"
        android:onClick="setPriorityD"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:text="D"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:id="@+id/priorityitem_detailD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:onClick="setPriorityD"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/priority_detail_height"
        android:layout_weight="1"
        android:clickable="true"
        android:gravity="center"
        android:longClickable="true"
        android:onClick="setPriorityE"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/e"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:clickable="true"
            android:gravity="center"
            android:longClickable="true"
            android:text="E"
            android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

        <TextView
            android:id="@+id/priorityitem_detailE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="true"
            android:contextClickable="true"
            android:gravity="center"
            android:onClick="setPriorityE"
            android:text="TextView" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="@color/divider_color"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />
</LinearLayout>