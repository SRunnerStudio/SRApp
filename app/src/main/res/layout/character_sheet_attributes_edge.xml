<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/edge1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="markEdge"
        android:tint="@color/edgefull"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hexagon3" />

    <ImageView
        android:id="@+id/edge2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="markEdge"
        android:tint="@color/edgefull"
        app:layout_constraintLeft_toRightOf="@+id/edge1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hexagon3" />

    <ImageView
        android:id="@+id/edge3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="markEdge"
        android:tint="@color/edgefull"
        app:layout_constraintLeft_toRightOf="@+id/edge2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hexagon3" />

    <ImageView
        android:id="@+id/edge4"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="markEdge"
        android:tint="@color/edgefull"
        app:layout_constraintLeft_toRightOf="@+id/edge3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hexagon3" />

    <ImageView
        android:id="@+id/edge5"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="markEdge"
        android:tint="@color/edgefull"
        app:layout_constraintLeft_toRightOf="@+id/edge4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hexagon3" />

    <ImageView
        android:id="@+id/edge6"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:clickable="true"
        android:onClick="markEdge"
        android:tint="@color/edgefull"
        app:layout_constraintLeft_toRightOf="@+id/edge5"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/hexagon3" />

</android.support.constraint.ConstraintLayout>
