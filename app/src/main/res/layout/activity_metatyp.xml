<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppBackgroudImage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="resetImage"
    tools:context="com.example.danielojea.srapp.charactercreation.MetatypChoose">


    <Button
        android:id="@+id/weiterButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:onClick="startMetatypDetail"
        android:text="@string/btnContinue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/ElfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="183dp"
        android:layout_marginRight="56dp"
        android:background="@null"
        android:onClick="changeElf"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/DummyImageMetatype"
        app:layout_constraintRight_toRightOf="@+id/DummyImageMetatype"
        app:srcCompat="@drawable/metatyp_elf" />

    <ImageButton
        android:id="@+id/HumanButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="103dp"
        android:layout_marginLeft="95dp"
        android:background="@null"
        android:onClick="changeHuman"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/DummyImageMetatype"
        app:layout_constraintLeft_toLeftOf="@+id/DummyImageMetatype"
        app:srcCompat="@drawable/metatyp_human" />

    <ImageButton
        android:id="@+id/DwarfButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginRight="56dp"
        android:background="@null"
        android:onClick="changeDwarf"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="@+id/DummyImageMetatype"
        app:layout_constraintRight_toRightOf="@+id/DummyImageMetatype"
        app:srcCompat="@drawable/metatyp_dwarf" />

    <ImageButton
        android:id="@+id/OrcButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="95dp"
        android:layout_marginTop="97dp"
        android:background="@null"
        android:onClick="changeOrc"
        android:scaleType="centerInside"
        app:layout_constraintLeft_toLeftOf="@+id/DummyImageMetatype"
        app:layout_constraintTop_toTopOf="@+id/DummyImageMetatype"
        app:srcCompat="@drawable/metatyp_orc" />

    <ImageButton
        android:id="@+id/TrollButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="56dp"
        android:layout_marginTop="180dp"
        android:background="@null"
        android:onClick="changeTroll"
        android:scaleType="centerInside"
        app:layout_constraintRight_toRightOf="@+id/DummyImageMetatype"
        app:layout_constraintTop_toTopOf="@+id/DummyImageMetatype"
        app:srcCompat="@drawable/metatyp_troll" />

    <ImageView
        android:id="@+id/DummyImageMetatype"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/weiterButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@mipmap/ic_launcher" />

</android.support.constraint.ConstraintLayout>
