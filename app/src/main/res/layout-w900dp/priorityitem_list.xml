<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    android:showDividers="middle"
    tools:context="com.example.danielojea.srapp.PriorityListActivity">

    <!--
    This layout is a two-pane layout for the PriorityItems
    master/detail flow.
    
    -->

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/priorityitem_list"
            android:name="com.example.danielojea.srapp.PriorityItemListFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="LinearLayoutManager"
            tools:context="com.example.danielojea.srapp.PriorityListActivity"
            tools:listitem="@layout/priorityitem_list_content" />
    </ScrollView>

    <FrameLayout
        android:id="@+id/priorityitem_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3" />

</LinearLayout>
